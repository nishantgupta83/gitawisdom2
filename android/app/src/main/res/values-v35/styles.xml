<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- API 35+ Edge-to-Edge Opt-Out for Safe Migration -->
    <!-- This prevents immediate UI breakage while allowing gradual edge-to-edge implementation -->

    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Critical: Opt-out of edge-to-edge enforcement for API 35+ -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>

        <!-- Maintain transparent status bar for visual consistency -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Maintain transparent navigation bar -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Handle display cutouts properly -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- Ensure proper background handling -->
        <item name="android:windowShowWallpaper">false</item>
        <item name="android:windowBackground">@drawable/launch_background</item>

        <!-- Maintain Flutter's default window flags -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Edge-to-edge opt-out for normal theme as well -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>

        <!-- Status bar configuration -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar configuration -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Display cutout handling -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- Background and window properties -->
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
